{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mindscript.dev/schemas/mindscript/provenance-0.1.json",
  "title": "MindScript Provenance",
  "description": "Audit trail entries that describe how contract data was produced.",
  "type": "array",
  "items": {
    "type": "object",
    "additionalProperties": false,
    "required": ["source", "at"],
    "properties": {
      "source": { "$ref": "./defs-0.1.json#/$defs/source" },
      "at": {
        "type": "string",
        "format": "date-time"
      },
      "field": {
        "type": "string",
        "description": "Optional affected field (top-level key or JSON Pointer)."
      },
      "actor": {
        "type": "string",
        "description": "Identifier for the agent/system that created the entry."
      },
      "note": {
        "type": "string",
        "description": "Short explanation."
      },
      "data": {
        "type": "object",
        "additionalProperties": true
      },
      "ext": {
        "type": "object",
        "additionalProperties": true
      }
    }
  }
}

