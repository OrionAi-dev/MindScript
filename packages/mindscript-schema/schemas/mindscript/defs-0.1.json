{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mindscript.dev/schemas/mindscript/defs-0.1.json",
  "title": "MindScript Shared Definitions",
  "type": "object",
  "$defs": {
    "source": {
      "type": "string",
      "enum": ["user", "context", "default", "memory", "model", "system"]
    },
    "fieldScope": {
      "oneOf": [
        {
          "type": "object",
          "additionalProperties": false,
          "required": ["kind", "value"],
          "properties": {
            "kind": { "const": "filetype" },
            "value": { "type": "string", "minLength": 1 }
          }
        },
        {
          "type": "object",
          "additionalProperties": false,
          "required": ["kind", "id"],
          "properties": {
            "kind": { "const": "project" },
            "id": { "type": "string", "minLength": 1 }
          }
        },
        {
          "type": "object",
          "additionalProperties": false,
          "required": ["kind", "value"],
          "properties": {
            "kind": { "const": "intent" },
            "value": { "type": "string", "minLength": 1 }
          }
        },
        {
          "type": "object",
          "additionalProperties": false,
          "required": ["kind"],
          "properties": {
            "kind": { "const": "global" }
          }
        }
      ]
    },
    "evidenceRef": {
      "type": "object",
      "additionalProperties": false,
      "required": ["ref"],
      "properties": {
        "ref": {
          "type": "string",
          "description": "File path, URL, or opaque reference."
        },
        "kind": {
          "type": "string",
          "description": "Free-form kind (test, doc, artifact, bdd, log, ...)."
        },
        "selector": {
          "type": "string",
          "description": "Free-form selector; integrations define semantics."
        },
        "checksum": {
          "type": "string",
          "description": "Integrity hint (recommended format: sha256:<hex>)."
        },
        "ext": {
          "type": "object",
          "additionalProperties": true
        }
      }
    },
    "specField": {
      "type": "object",
      "additionalProperties": false,
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["string", "number", "boolean", "enum", "object", "array", "any"]
        },
        "value": {},
        "default": {},
        "required": { "type": "boolean" },
        "min": { "type": "number" },
        "max": { "type": "number" },
        "enum": { "type": "array", "items": {} },
        "pattern": { "type": "string" },
        "many": { "type": "boolean" },
        "noneAllowed": { "type": "boolean" },
        "description": { "type": "string" },
        "source": { "$ref": "#/$defs/source" },
        "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
        "rationale": { "type": "string" },
        "scope": { "$ref": "#/$defs/fieldScope" },
        "ext": { "type": "object", "additionalProperties": true },
        "properties": {
          "type": "object",
          "description": "For object fields only.",
          "additionalProperties": { "$ref": "#/$defs/specField" }
        },
        "items": {
          "description": "For array fields only.",
          "$ref": "#/$defs/specField"
        }
      }
    }
  }
}

