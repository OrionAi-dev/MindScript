{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mindscript.dev/schemas/mindscript/context-0.1.json",
  "title": "MindScript Context",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "kind",
    "id",
    "intent",
    "scope",
    "lifespan",
    "fields",
    "acceptanceCriteria",
    "lockedAt"
  ],
  "properties": {
    "kind": { "const": "context" },
    "id": { "type": "string", "minLength": 1 },
    "intent": { "type": "string", "minLength": 1 },
    "scope": {
      "type": "object",
      "additionalProperties": false,
      "required": ["type"],
      "properties": {
        "type": { "type": "string", "enum": ["session", "project", "workspace", "global"] },
        "id": { "type": "string" }
      }
    },
    "lifespan": {
      "type": "object",
      "additionalProperties": false,
      "required": ["mode"],
      "properties": {
        "mode": { "type": "string", "enum": ["session", "rolling", "pinned"] },
        "ttlDays": { "type": "number", "minimum": 0 },
        "maxUses": { "type": "number", "minimum": 0 }
      }
    },
    "fields": {
      "type": "object",
      "additionalProperties": { "$ref": "./defs-0.1.json#/$defs/specField" }
    },
    "acceptanceCriteria": { "$ref": "./acceptance-criteria-0.1.json" },
    "provenance": { "$ref": "./provenance-0.1.json" },
    "lockedAt": { "type": "string", "format": "date-time" },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+(-[0-9A-Za-z.-]+)?$"
    },
    "signature": { "type": "string" },
    "meta": {
      "type": "object",
      "additionalProperties": true
    }
  }
}

