{
  "name": "openspec-plugin-mindscript",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "pretypecheck": "pnpm -w -F @mindscript/openspec-types build",
    "typecheck": "pnpm exec tsc -p tsconfig.json --noEmit",
    "prebuild": "pnpm -w -F @mindscript/openspec-types build",
    "build": "pnpm exec tsup"
  },
  "dependencies": {
    "@mindscript/openspec-types": "workspace:*",
    "@mindscript/openspec-runtime": "workspace:*",
    "@mindscript/mindql-core": "workspace:*"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.9.0"
  }
}
