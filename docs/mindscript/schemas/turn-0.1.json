{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://openspec.dev/schemas/mindscript/turn-0.1.json",
  "title": "MindScript Turn",
  "description": "Single exchange of intent and response anchored to a Context. Versions follow SemVer; increment major for breaking changes, minor for additive changes, and patch for clarifications.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "kind",
    "id",
    "intent",
    "inheritsFrom",
    "fields",
    "acceptanceCriteria"
  ],
  "properties": {
    "kind": {
      "const": "turn"
    },
    "id": {
      "type": "string",
      "description": "Unique identifier for the Turn."
    },
    "intent": {
      "type": "string",
      "description": "Purpose of the Turn."
    },
    "inheritsFrom": {
      "type": "string",
      "description": "Context ID that the Turn derives from."
    },
    "fields": {
      "type": "object",
      "description": "Field map describing the Turn payload.",
      "additionalProperties": {
        "$ref": "#/$defs/specField"
      }
    },
    "acceptanceCriteria": {
      "$ref": "./acceptance-criteria-0.1.json"
    },
    "provenance": {
      "$ref": "./provenance-0.1.json"
    },
    "lockedAt": {
      "type": "string",
      "format": "date-time"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+(-[0-9A-Za-z.-]+)?$",
      "description": "Semantic version for the Turn contract."
    },
    "signature": {
      "type": "string",
      "description": "Deterministic hash or signature for the Turn."
    },
    "ext": {
      "type": "object",
      "description": "Namespace for extensions.",
      "additionalProperties": true
    }
  },
  "$defs": {
    "specField": {
      "type": "object",
      "additionalProperties": false,
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["string", "number", "boolean", "enum", "object", "array", "any"]
        },
        "value": {},
        "default": {},
        "required": {
          "type": "boolean"
        },
        "min": {
          "type": "number"
        },
        "max": {
          "type": "number"
        },
        "enum": {
          "type": "array",
          "items": {}
        },
        "pattern": {
          "type": "string"
        },
        "many": {
          "type": "boolean"
        },
        "noneAllowed": {
          "type": "boolean"
        },
        "description": {
          "type": "string"
        },
        "source": {
          "type": "string",
          "enum": ["user", "context", "default", "memory", "model", "system"]
        },
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "rationale": {
          "type": "string"
        },
        "scope": {
          "type": "string"
        },
        "ext": {
          "type": "object",
          "additionalProperties": true
        }
      }
    }
  }
}
